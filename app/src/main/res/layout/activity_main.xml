<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:layout_weight="2"
    android:orientation="vertical"
    tools:context="com.example.admin.comosaber.MainActivity"
    android:background="#7B68EE">

    <ImageView
        android:id="@+id/clock_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/relogio"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"/>

    <EditText
        android:id = "@+id/name_user"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
       android:layout_margin="6dp"
        android:layout_below="@+id/clock_view"
        android:hint = "Name: "
        android:inputType = "text"  />

    <EditText
        android:id="@+id/age_view"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/name_user"
        android:hint="How old are you?"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_view"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/cat"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/contar_ovelhas"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/cachorro"/>



    </LinearLayout>


        <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:onClick="startSecondActivity"
        android:background="#00BFFF"    />


</RelativeLayout>
